{
  "name": "postzero",
  "version": "0.1.0",
  "main": "src/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dev:electron": "concurrently \"vite dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder build",
    "electron:build:win": "electron-builder build --win",
    "electron:build:mac": "electron-builder build --mac",
    "electron:build:linux": "electron-builder build --linux"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.1",
    "@sveltejs/kit": "^2.21.5",
    "axios": "^1.10.0",
    "bootstrap-icons": "^1.13.1",
    "curlconverter": "^4.0.0",
    "lowdb": "^6.1.1",
    "svelte": "^5.34.3",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.postzero.app",
    "productName": "PostZero",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "${GITHUB_REPOSITORY_OWNER}",
      "repo": "postzero"
    }
  }
}
